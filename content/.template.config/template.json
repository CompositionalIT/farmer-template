{
    "$schema": "http://json.schemastore.org/template",
    "author": "Isaac Abraham",
    "classifications": [
        "Azure",
        "Console",
        "F#"
    ],
    "name": "Farmer Application",
    "tags": {
        "language": "F#",
        "type": "project"
    },
    "identity": "Farmer.Template",
    "shortName": "Farmer",
    "sourceName": "Farmer.Template",
    "symbols": {
        "ci": {
            "description": "Choose how you want to deploy your Farmer template from a CI/CD perspective.",
            "type": "parameter",
            "datatype": "choice",
            "defaultValue": "none",
            "choices": [
                {
                    "choice": "none",
                    "description": "don't add support for CI"
                },
                {
                    "choice": "devops",
                    "description": "add support for azure devops"
                },
                {
                    "choice": "direct",
                    "description": "add support for direct deployment through Farmer"
                }

            ]
        },
        "azureSubscription" : {
            "type": "parameter",
            "datatype": "text",
            "replaces":"<enter subscription name here>",
            "isRequired": false,
            "description": "The name of the subscription"
        },
        "resourceGroup" : {
            "type": "parameter",
            "datatype": "text",
            "replaces":"farmer-rg",
            "isRequired": false,
            "description": "The name of the resource group in Azure."
        },
        "armTemplate" : {
            "description": "The name of the ARM template JSON file.",
            "type": "parameter",
            "datatype": "text",
            "replaces": "output",
            "isRequired": false
        },
        "location" : {
            "type": "parameter",
            "datatype": "choice",
            "choices": [
                { "choice" : "EastAsia" },
                { "choice" : "SoutheastAsia" },
                { "choice" : "CentralUS" },
                { "choice" : "EastUS" },
                { "choice" : "EastUS2" },
                { "choice" : "WestUS" },
                { "choice" : "NorthCentralUS" },
                { "choice" : "SouthCentralUS" },
                { "choice" : "NorthEurope" },
                { "choice" : "WestEurope" },
                { "choice" : "JapanWest" },
                { "choice" : "JapanEast" },
                { "choice" : "BrazilSouth" },
                { "choice" : "AustraliaEast" },
                { "choice" : "AustraliaSoutheast" },
                { "choice" : "SouthIndia" },
                { "choice" : "CentralIndia" },
                { "choice" : "WestIndia" }
            ],
            "description": "The location to create the resources in.",
            "replaces": "NorthEurope",
            "isRequired": false
        }
    },
    "sources": [
        {
            "exclude": [
                "**/.template.config/**/*",
                ".ionide/**",
                "*.fs",
                "*.yml"
            ],
            "modifiers": [
                {
                    "include": "azure-pipelines.yml",
                    "condition": "ci == \"devops\""
                },
                {
                    "include": "Program.fs",
                    "condition": "ci != \"direct\""
                },
                {
                    "include": "ProgramDeploy.fs",
                    "condition": "ci == \"direct\"",
                    "rename": { "ProgramDeploy.fs" : "Program.fs" }
                }
            ]
        }
    ]
}